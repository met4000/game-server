{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "docker-compose build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Redis",
      "type": "shell",
      "command": "./redis.sh",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Ready to accept connections"
        }
      },
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
